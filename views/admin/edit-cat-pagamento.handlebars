<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Categoria de Pagamento</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/admin/cad-cat-pagamento" class="btn btn-outline-success btn-sm">Cadastrar</a>
                    <a href="/admin/cat-pagamentos" class="btn btn-outline-info btn-sm">Listar</a>
                    <a href="/admin/vis-cat-pagamento/{{catpagamento._id}}"
                        class="btn btn-outline-primary btn-sm">Visualizar</a>
                    <a href="/admin/del-cat-pagamento/{{catpagamento._id}}"
                        class="btn btn-outline-danger btn-sm">Apagar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/admin/cad-cat-pagamento">Cadastrar</a>
                        <a class="dropdown-item" href="/admin/cat-pagamentos">Listar</a>
                        <a class="dropdown-item" href="/admin/vis-cat-pagamento/{{catpagamento._id}}">Visualizar</a>
                        <a class="dropdown-item" href="/admin/del-cat-pagamento/{{catpagamento._id}}">Apagar</a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <form action="/admin/update-cat-pagamento/" method="POST">
            <input type="hidden" name="id" value="{{catpagamento.id}}">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><span class="text-danger">*</span> Nome</label>
                    <!--VALUE RECEBE O VALOR ENVIADO  NO catpagamento-->
                    <input name="nome" value="{{catpagamento.nome}}" type="text" class="form-control" id="nome"
                        placeholder="Nome da categoria de pagamento">
                </div>
            </div>
            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-success">Editar</button>
        </form>
        <div class="mt-3">
            <!--MENSAGEM DE ERRO-->
            {{>_msg}}
        </div>
    </div>
</div>
